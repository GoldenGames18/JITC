@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}
<div style="padding-top:6rem;">
    <section>
  <div class="  h-100" >
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="~/img/helico.png"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form id="account" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                        <img src="~/img/logo.png" style="width:9rem;"/>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connexion</h5>

                  <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Input.Email" >Adresse Email</label>
                    <input type="email"  class="form-control form-control-lg" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>

                  <div class="form-outline mb-4">
                    <label   asp-for="Input.Password" class="form-label" >Mots de passe</label>
                    <input  asp-for="Input.Password" type="password"  class="form-control form-control-lg" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="bg-c-lite-green btn btn-dark btn-lg btn-block" style="border:none;" type="submit">Connexion</button>
                  </div>

                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Pas encore de compte? <a asp-area="Identity" asp-page="/Account/Register"
                      style="color: #393f81;">Enregiste toi</a></p>
                 
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
