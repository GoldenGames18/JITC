@model JITC.Models.Airport

@{
    ViewData["Title"] = "Supprimer Aéroport ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h1 class="page-title h3 mb-3"> <strong>Suppression </strong> d'un Aéroport </h1>
            </div>
        </div>
    </div>

    
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Airport" asp-action="ListOfAirport">Liste des Aéroports</a></li>
        <li class="breadcrumb-item active" aria-current="page">Supression d'un aéroport</li>
      </ol>
    </nav>


    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div style="overflow:initial;" class="table-wrapper-scroll-y my-custom-scrollbar">
                      
                            <input asp-for="Longitude" type="hidden"  class="form-control" id="Longitude" value="@Model.Longitude"  >
                            <input asp-for="Latitude" type="hidden" class="form-control" id="Latitude" value="@Model.Latitude"  >
                             <p class="lead">
                               <h5>Nom de l'Aéroport :  @Model.Name </h5>
                            </p>
                             <div id="map"> </div>

                             <p class="lead">
                               <form asp-action="Delete">
                                    <input type="hidden" asp-for="AirportId" />
                                    <input type="submit" value="Supprimer" class="btn btn-danger" /> 
                                    <a asp-action="ListOfHelicopter"  style="text-decoration:none; color:black;">Retour</a>
                               </form>
                            </p>

                            
                    </div> 
                </div>
            </div>
        </div>
    </div>
 </div>

 @section Scripts{
 <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>


 <environment include="Development" > 
          
                <script src="~/js/informationMap.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
           <script src="~/js/informationMap.min.js" asp-append-version="true"></script>
    </environment>
 }

