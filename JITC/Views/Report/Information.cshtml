@model JITC.Models.Report

@{
    ViewData["Title"] = "Rapport info";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
             
            <div class="page-title-box" style="display:flex;">
                
                <h1 class="page-title h3 mb-3"><strong>Rapport</strong> informations</h1> 
            </div>
        </div>
    </div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Report" asp-action="ListOfReport">Liste des Rapports</a></li>
        <li class="breadcrumb-item active" aria-current="page">Informations sur le vol avec Rapport</li>
      </ol>
    </nav>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-wrapper-scroll-y my-custom-scrollbar">
                             <p class="lead">
                               <h5>Date du vol : @Model.Route.Start.ToString("dd/MM/yyyy")   </h5>
                               <h5>Heure de vol : @Model.Route.PanifiedStart.ToString("HH:mm") à @Model.Route.PanifiedEnd.ToString("HH:mm") </h5>
                             
                               <h5>Nom de l'Aéroport de départ : @Model.Route.StartAirport.Name   </h5>
                               <h5>Nom de l'Aéroport de fin : @Model.Route.EndAirport.Name   </h5>
                               <h5>Nombre de kilomètres : @Model.Route.Kilometre  </h5>
                               <h5>Nom du pilote : @Model.Route.Pilote.Name </h5>
                               <h5>Nom de l'hélicoptère : @Model.Route.Helicopter.HelicopterName </h5>
                               <h5>Places disponibles : @Model.Route.Place </h5>
                               <h5>Places restantes : @Model.Route.PlaceRemaining </h5>
                               
                               <h5> <strong>Rapport</strong></h5>
                                
                               <h5>Heure de départ : @Model.Start.ToString("HH:mm")</h5>
                               <h5>Heure  d'arrivée : @Model.End.ToString("HH:mm")</h5>

                               <h6> @Model.Message</h6>



                            </p> 
                </div> 
            </div>
        </div>
    </div>
 </div>
 </div>