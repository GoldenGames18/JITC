@model IEnumerable<JITC.ViewModels.RouteViewModels>

@{
    ViewData["Title"] = "Trajet liste";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

 
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
             
            <div class="page-title-box" style="display:flex;">
                
                <h1 class="page-title h3 mb-3"><strong>Trajets</strong></h1> 
                <div class="d-flex justify-content-end" style="padding-bottom: 1rem; width: 100%;">
	                <a asp-controller="Route" asp-action="AddRoute"><button type="button" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Ajouter</button></a>
                </div>   
            </div>
        </div>
    </div>
   <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-wrapper-scroll-y my-custom-scrollbar">
                        <table class="table">
                            <thead style="position: sticky;top: 0; background:#262626; color:white;">
                                <tr>
                        
                                    <th>Départ</th>
                        
                                    <th> Arrivée </th>
                                    <th>Distance</th>
                                    <th>Places</th>
                                    <th>Places Restantes</th>
                                    <th>Date</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var route in Model)
                                {
                                    <tr>
                                        <td>@route.Start </td>
                                        <td>@route.End </td>
                                        <td>@route.Kilometre km </td>
                                        <td>@route.Place </td>
                                        <td>@route.PlaceRemaining </td>
                                        <td>@route.Date.ToString("dd/MM/yyyy") </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@route.RouteId"  ><span class="badge bg-primary"> <i class="fa-solid fa-pen-to-square"></i> Editer</span></a>
                                            <a asp-action="Delete" asp-route-id="@route.RouteId"> <span class="badge bg-danger"> <i class="fa-solid fa-trash-can"></i> Supprimer</span></a>
                                            <a asp-action="Information" asp-route-id="@route.RouteId"><span class="badge bg-info "><i class="fa-solid fa-eye"></i> Détails</span> </a>
                                        </td>
                                    </tr>         
                                }
                            </tbody>
                        </table>
                    </div> 
                </div>
            </div>
        </div>
    </div>
 </div>