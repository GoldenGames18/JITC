@model JITC.ViewModels.StatViewModel

@{
    ViewData["Title"] = "Statistique";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h1 class="page-title h3 mb-3"> <strong>Statistique </strong> </h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-15">
            <div class="card">
                <div class="card-body">
                    <div style="overflow:initial;" class="table-wrapper-scroll-y my-custom-scrollbar">
                       <canvas id="myChart" ></canvas>
                    </div> 
                </div>
            </div>
        </div>
    </div>
 </div>



   @section Scripts{
   <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.2/chart.min.js" integrity="sha512-zjlf0U0eJmSo1Le4/zcZI51ks5SjuQXkU0yOdsOBubjSmio9iCUp8XPLkEAADZNBdR9crRy3cniZ65LF2w8sRA==" crossorigin="anonymous" referrerpolicy="no-referrer">
</script>



<environment include="Development"> 
    <script src="~/js/stat.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/stat.min.js" asp-append-version="true"></script>
</environment>

<script>
   
    let name =  @Html.Raw(Json.Serialize(Model.Name));
    let  value  = @Html.Raw(Json.Serialize(Model.Value));
    CreateStat(value, name);
</script>
   
   }



  
