
@model IEnumerable<JITC.Models.Helicopter>

@{
    ViewData["Title"] = "Garage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box" style="display:flex;">
                <h1 class="page-title h3 mb-3"><strong>Garage</strong> : Réinitialiser le nombre de vols </h1>  
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-wrapper-scroll-y my-custom-scrollbar">
                            <table class="table">
                          <thead style="position: sticky;top: 0; background:#262626; color:white;">
                            <tr>
                        
                              <th>Nom</th>
                              <th>Moteur</th>
                              <th>Voyages</th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody>
                              @foreach(var helico in Model)
                              {
                                <tr>
                                    <td>@helico.HelicopterName </td>
                                    <td>@helico.Engine</td>
                                    <td>@helico.Fly</td>
                                    <td>
                                        <a asp-action="ResetFly" asp-route-id="@helico.HelicopterId"  >  <span class="badge bg-warning text-dark"><i class="fa-solid fa-gears"></i> Valider </span> </a>
                                    </td>
                               </tr>         
                             }
                           </tbody>
                       </table>
                    </div> 
                </div>
            </div>
        </div>
     </div>
 </div>