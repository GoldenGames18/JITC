       </p>
      <a id="decouvrir" class="highlight-button btn btn-large button xs-margin-bottom-five" data-abc="true">Nous découvrir</a> 
    
    </div>
  </div>

</div>




     @if (SignInManager.IsSignedIn(User))
    {
    <div class="notification">
        <a asp-controller="Message" asp-action="Index"> 


    
        <button type="button" class="icon-button">
            <span class="material-icons"><i class="fa-solid fa-envelope" style="color:white; font-size: 1.1rem;"></i></span>
            @if (Model.Notification != 0)
            {
                <span class="icon-button__badge">@Model.Notification</span> 
            }
           
          </button>
        </a>
        </div>

    }


      @section Scripts{
          <environment include="Development" > 
          <script src="~/js/infomation.js" asp-append-version="true"></script>
           
    </environment>
    <environment exclude="Development">
           <script src="~/js/infomation.min.js" asp-append-version="true"></script>
    </environment>
      }
    
