@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model JITC.ViewModels.NotificationViewModel;
@{
    ViewData["Title"] = "Accueil";
}

<div class="position">
<div class="position-relative overflow-hidden p-2 p-md-4 m-md-2 text-center ">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <img src="~/img/logo-no-title.png" alt="logo JITC" style="    max-height: 40%; max-width: 40%">
      
      <p class="lead fw-normal"> <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">JITC</a></p>
       <p id="info" class="lead fw-normal " style="color:white; background-color:#383e42; height:50%;" hidden> Just-in-time company consiste en une offre de transports de personnes par hélicoptère pour désengorger les routes 
           <br />      
