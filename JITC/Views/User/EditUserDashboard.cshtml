@model JITC.Models.User
@{
    ViewData["Title"] = "Modification Utilisateurs";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h1 class="page-title h3 mb-3">   <img src= "@Url.Content(@Model.Path)" alt="image user" class="img-radius-small" /> <strong>@Model.Name </strong> @Model.LastName</h1>
            </div>
        </div>
    </div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="User" asp-action="ListOfUser">Liste des Utilisateurs</a></li>
        <li class="breadcrumb-item active" aria-current="page">Modification d'un Utilisateur</li>
      </ol>
    </nav>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div style="overflow:initial;" class="table-wrapper-scroll-y my-custom-scrollbar">
                        <form asp-action="EditUserDashboard">
                            <input asp-for="Id" type="hidden" class="form-control" id="name" value="@Model.Id"  >
                            <input asp-for="Path" type="hidden" class="form-control" id="name" value="@Model.Path"  >
                          <div class="mb-3">
                            <label  class="form-label">Nom : </label>
                            <input asp-for="Name" type="text" class="form-control" id="name" value="@Model.Name"  >
                            <div id="emailHelp" class="form-text"></div>
                            <h6>@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</h6>
                          </div>
                          <div class="mb-3">
                            <label  class="form-label">Prénom : </label>
                            <input asp-for="LastName" type="text" class="form-control" id="LastName" value="@Model.LastName">
                             <h6>@Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })</h6>
                          </div>
                          <div class="mb-3">
                            <label  class="form-label">Email : </label>
                            <input input asp-for="Email" type="email" class="form-control" id="exampleInputPassword1" value="@Model.Email" >
                            <h6>@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</h6>

                          </div>
                           <div class="mb-3 form-check">
                            <input  type="checkbox" class="form-check-input" id="remove" name="remove" value="true">
                            <label class="form-check-label" for="exampleCheck1">Supprimer la photo de l'utilisateur</label>
                          </div>
                          <button type="submit" style="border:none;" class=" btn btn-primary bg-c-lite-green">Editer</button>
                        </form> 
                    </div> 
                </div>
            </div>
        </div>
    </div>
 </div>